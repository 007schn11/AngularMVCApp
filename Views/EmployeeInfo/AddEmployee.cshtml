@{
    ViewBag.Title = "AddEmployee";
}

<h2>Add New Employee</h2>
<style>
    input.ng-invalid {
        border: 1px solid red;
    }

    input.ng-valid {
        border: 1px solid blue;
    }
</style>
<table name="table">
    <tr>
        @*<td>Id</td>*@
        <td><input type="hidden" ng-model="Id" />  </td>

    </tr>
    <tr>
        <td>EmpName</td>
        <td><input type="text" name="name" ng-model="EmpName" required />  </td>
    </tr>
    <tr>
        <td>Salary</td>
        <td><input type="text" ng-model="Salary" required />  </td>
    </tr>
    <tr>
        <td>DeptName</td>
        <td><input type="text" ng-model="DeptName" required />  </td>
    </tr>

    <tr>
        <td>Designation</td>
        <td><input type="text" ng-model="Designation" required />  </td>
    </tr>
</table>
<input type="button" value="Save" ng-click="save()" />

